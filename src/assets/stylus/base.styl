//
// Mixin set button color
//
set-button-color(pBackground, pColor) {
    set-button-style(pBackground, pColor, 'default');
}

set-flat-button(pBackground, pColor) {
    set-button-style(pBackground, pColor, 'flat');
}

set-button-style(pBackground, pColor, pStyle) {
    @extend .mybtn;
    display: flex;
    justify-content: center;
    align-items: center;
    transition-property: background !important;
    transition-duration: 0.5 !important;

    if (pStyle == 'default') {
        background-color: pBackground !important;
        color: pColor !important;

        i {
            color: pColor !important;
        }

        &:hover {
            box-shadow: 0px 5px 18px -2px lighten(pBackground, 10);
        }
    }

    if (pStyle == 'flat') {
        background-color: transparent !important;
        color: pColor !important;

        i {
            color: pBackground !important;
        }

        &:hover {
            background: pBackground !important;

            i {
                color: pColor !important;
            }
        }
    }
}

