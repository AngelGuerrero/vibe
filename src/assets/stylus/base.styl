// ██╔══██╗██║   ██║   ██║      ██║   ██║   ██║██║╚██╗██║╚════██║
// ██████╔╝╚██████╔╝   ██║      ██║   ╚██████╔╝██║ ╚████║███████║
// ╚═════╝  ╚═════╝    ╚═╝      ╚═╝    ╚═════╝ ╚═╝  ╚═══╝╚══════╝
.mybtn {
    padding: 3px !important;
    margin: 1px !important;
    border: 1px solid transparent !important;
    border-radius: 5px !important;
    transition-property: box-shadow !important;
    transition-duration: 0.5s;
}

//
// Square buttons
//
.mybtn-default {
    set-button-color(#127ce4, white);
}

.mybtn-success {
    set-button-color(#46c93a, white);
}

.mybtn-warning {
    set-button-color(#ffba00, white);
}

.mybtn-danger {
    set-button-color(#ff4757, white);
}

.mybtn-dark {
    set-button-color(#000000, white);
}

//
// Square Flat buttons
//
.mybtn-default--flat {
    set-flat-button(primary-blue-color, primary-contrast);
}

.mybtn-success--flat {
    set-flat-button(success-color, success-contrast);
}

.mybtn-warning--flat {
    set-flat-button(warning-color, warning-contrast);
}

.mybtn-danger--flat {
    set-flat-button(danger-color, danger-contrast);
}

.mybtn-dark--flat {
    set-flat-button(dark-color, dark-contrast);
}
